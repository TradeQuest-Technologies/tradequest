# TradeQuest Terraform Variables
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"
environment = "prod"
project_name = "tradequest"

# Domain Configuration (optional)
# domain_name = "yourdomain.com"
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"
# route53_zone_id = "Z1234567890ABC"

# Database Configuration
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_max_allocated_storage = 100

# ECS Configuration
backend_cpu = 512
backend_memory = 1024
frontend_cpu = 256
frontend_memory = 512

# Scaling Configuration
min_capacity = 1
max_capacity = 10
target_cpu_utilization = 70

# Networking
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# Security
allowed_cidr_blocks = ["0.0.0.0/0"]

# Secrets (these will be stored in AWS Secrets Manager)
# openai_api_key = "your-openai-api-key"
# stripe_secret_key = "sk_live_..."
# stripe_webhook_secret = "whsec_..."
# smtp_username = "your-smtp-username"
# smtp_password = "your-smtp-password"
# twilio_account_sid = "AC..."
# twilio_auth_token = "your-twilio-auth-token"
# twilio_phone_number = "+1234567890"
# google_client_id = "your-google-client-id"
# google_client_secret = "your-google-client-secret"
# telegram_bot_token = "your-telegram-bot-token"
# alpha_vantage_api_key = "your-alpha-vantage-key"
# polygon_api_key = "your-polygon-api-key"
# polygon_s3_access_key = "your-polygon-s3-access-key"
# polygon_s3_secret_key = "your-polygon-s3-secret-key"
